<UserControl x:Class="FurnaceWPF.Views.Controls.DriverControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FurnaceWPF.Views.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:conv="clr-namespace:FurnaceWPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="250">

    <UserControl.Resources>
        <conv:BoolToBrushConverter x:Key="BoolToBrushConverter" TrueBrush="MediumSeaGreen" FalseBrush="Gray"/>
    </UserControl.Resources>

    <materialDesign:Card Padding="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{Binding Name, StringFormat=Привод {0}}" 
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,6" VerticalAlignment="Center">
                <TextBlock Text="Скорость:" FontSize="18" Margin="0,0,4,0"/>
                <TextBlock Text="{Binding Speed, StringFormat=F1}" FontSize="18" FontWeight="Bold" Foreground="DarkSlateBlue"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBox Width="81" Margin="0,0,10,0"
                         Text="{Binding InputSpeed, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="18"
                         PreviewTextInput="Input_TextPrewview"/>
                <Button Content="Применить"
                        FontSize="18"
                        Command="{Binding ConfirmSpeedCommand}"
                        IsEnabled="{Binding CanConfirmSpeed}"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <ToggleButton IsChecked="{Binding IsLeft, Mode=TwoWay}"
                              Width="48" Height="48" Margin="0,0,10,0"
                              Style="{StaticResource MaterialDesignIconButton}">
                    <materialDesign:PackIcon Kind="ArrowLeftBold" Width="48" Height="48"
                                             Foreground="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}, Converter={StaticResource BoolToBrushConverter}}"/>
                </ToggleButton>
                <ToggleButton IsChecked="{Binding IsRight, Mode=TwoWay}"
                              Width="48" Height="48"
                              Style="{StaticResource MaterialDesignIconButton}">
                    <materialDesign:PackIcon Kind="ArrowRightBold" Width="48" Height="48"
                                             Foreground="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}, Converter={StaticResource BoolToBrushConverter}}"/>
                </ToggleButton>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>