<UserControl x:Class="FurnaceWPF.Views.Controls.DriverControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FurnaceWPF.Views.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:conv="clr-namespace:FurnaceWPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="250">

    <UserControl.Resources>
        <conv:BoolToBrushConverter x:Key="BoolToBrushConverter" TrueBrush="MediumSeaGreen" FalseBrush="Gray"/>
        <conv:ConfigurableBooleanConverter x:Key="TurnOnOffButtonStateConverterr">
            <conv:ConfigurableBooleanConverter.TrueValue>
                <SolidColorBrush Color="#21c445"/>
            </conv:ConfigurableBooleanConverter.TrueValue>

            <conv:ConfigurableBooleanConverter.FalseValue>
                <SolidColorBrush Color="#e60e23"/>
            </conv:ConfigurableBooleanConverter.FalseValue>
        </conv:ConfigurableBooleanConverter>
    </UserControl.Resources>

    <materialDesign:Card Padding="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBlock Text="{Binding DriverName, StringFormat=Привод {0}}" 
                            FontSize="18" FontWeight="Bold" 
                            Margin="0,0,0,8"
                            VerticalAlignment="Center"/>
                <ToggleButton Margin="20" IsChecked="{Binding IsWorking, Mode=TwoWay}"
                            Style="{StaticResource MaterialDesignIconButton}" Cursor="Hand"
                              IsEnabled="{Binding IsEnabled}"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Power" Width="30" Height="30"
                                Foreground="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}, Converter={StaticResource TurnOnOffButtonStateConverterr}}" Cursor="" VerticalAlignment="Center"/>
                </ToggleButton>
            </StackPanel>


            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,6" VerticalAlignment="Center">
                <TextBlock Text="Скорость:" FontSize="18" Margin="0,0,4,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Speed, StringFormat=F1}" FontSize="18" FontWeight="Bold" Foreground="DarkSlateBlue" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBox Width="81" Margin="0,0,10,0"
                         Text="{Binding InputSpeed, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="18"
                         PreviewTextInput="Input_TextPrewview"/>
                <Button Content="Применить"
                        FontSize="18"
                        Command="{Binding ConfirmSpeedCommand}"
                        IsEnabled="{Binding CanConfirmSpeed}"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="ArrowLeftBold" Width="48" Height="48"
                         Foreground="{Binding IsLeft, Converter={StaticResource BoolToBrushConverter}}"/>
                <materialDesign:PackIcon Kind="ArrowRightBold" Width="48" Height="48"
                         Foreground="{Binding IsRight, Converter={StaticResource BoolToBrushConverter}}"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>