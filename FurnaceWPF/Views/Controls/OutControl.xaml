<UserControl x:Class="FurnaceWPF.Views.Controls.OutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FurnaceWPF.Views.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:FurnaceWPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:ConfigurableBooleanConverter x:Key="TurnOnOffButtonStateConverterr">
            <converters:ConfigurableBooleanConverter.TrueValue>
                <SolidColorBrush Color="#21c445"/>
            </converters:ConfigurableBooleanConverter.TrueValue>

            <converters:ConfigurableBooleanConverter.FalseValue>
                <SolidColorBrush Color="#e60e23"/>
            </converters:ConfigurableBooleanConverter.FalseValue>
        </converters:ConfigurableBooleanConverter>
    </UserControl.Resources>
    <materialDesign:Card Padding="14">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Thermometer" Width="28" Height="28" />
                    <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="SemiBold" Margin="8,0,0,0"/>
                </StackPanel>

                <!--<ToggleButton Grid.Column="1" IsChecked="{Binding IsPumpOn, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        IsEnabled="{Binding IsEnabled}">
                    <materialDesign:PackIcon Kind="Power" Width="48" Height="48" 
                         Foreground="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}, Converter={StaticResource TurnOnOffButtonStateConverterr}}" Cursor=""/>
                </ToggleButton>-->
            </Grid>

            <ProgressBar Grid.Row="1" Value="{Binding CoolantTemperatureDouble, Mode=OneWay}" Maximum="500" Height="10" Margin="0,0,0,6"
             Foreground="{Binding CoolantBrush}" />

            <TextBlock Grid.Row="2" Text="{Binding CoolantTemperature, Mode=OneWay}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </materialDesign:Card>
</UserControl>
