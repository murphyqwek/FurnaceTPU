<UserControl x:Class="FurnaceWPF.Views.Controls.TemperatureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FurnaceWPF.Views.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:FurnaceWPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:ConfigurableBooleanConverter x:Key="TurnOnOffButtonStateConverterr">
            <converters:ConfigurableBooleanConverter.TrueValue>
                <SolidColorBrush Color="#21c445"/>
            </converters:ConfigurableBooleanConverter.TrueValue>

            <converters:ConfigurableBooleanConverter.FalseValue>
                <SolidColorBrush Color="#e60e23"/>
            </converters:ConfigurableBooleanConverter.FalseValue>
        </converters:ConfigurableBooleanConverter>

        <converters:ConfigurableBooleanConverter x:Key="BackgroundControlButton">
            <converters:ConfigurableBooleanConverter.TrueValue>
                <SolidColorBrush Color="#e60e23"/>
            </converters:ConfigurableBooleanConverter.TrueValue>
            
            <converters:ConfigurableBooleanConverter.FalseValue>
                <SolidColorBrush Color="#21c445"/>
            </converters:ConfigurableBooleanConverter.FalseValue>
        </converters:ConfigurableBooleanConverter>

        <converters:ConfigurableBooleanConverter x:Key="ForegroundControlButton">
            <converters:ConfigurableBooleanConverter.TrueValue>
                <SolidColorBrush Color="#111212"/>
            </converters:ConfigurableBooleanConverter.TrueValue>

            <converters:ConfigurableBooleanConverter.FalseValue>
                <SolidColorBrush Color="#e6e9ed"/>
            </converters:ConfigurableBooleanConverter.FalseValue>
        </converters:ConfigurableBooleanConverter>

        <converters:BoolToTextConverter x:Key="ControllTextBoolConverter"/>
    </UserControl.Resources>
    <materialDesign:Card Padding="14">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Thermometer" Width="28" Height="28" />
                    <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="SemiBold" Margin="8,0,0,0"/>
                </StackPanel>

                <ToggleButton Grid.Column="1" IsChecked="{Binding IsWorking, Mode=TwoWay}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            IsEnabled="{Binding IsEnabled}">
                    <materialDesign:PackIcon Kind="Power" Width="48" Height="48"
                             Foreground="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}, Converter={StaticResource TurnOnOffButtonStateConverterr}}" Cursor=""/>
                </ToggleButton>
            </Grid>

            <ProgressBar Grid.Row="1" Value="{Binding CurrentTemperature, Mode=OneWay}" Maximum="700" Height="10" Margin="0,0,0,6"
                         Foreground="{Binding TempBrush}" />

            <TextBlock Grid.Row="2" Text="{Binding TemperatureText, Mode=OneWay}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right"/>

            <TextBox Grid.Row="3"
                     Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                     Text="{Binding InputTemperature, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}"
                     materialDesign:HintAssist.Hint="Задать температуру"
                     FontSize="24"
                     Margin="0,6,0,10"
                     MinWidth="150"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     PreviewTextInput="Input_TextPrewview"
                     AutomationProperties.Name="SetTemperatureInput"
                     IsEnabled="{Binding IsInputEnabled}"
                     />

            <Button Grid.Row="4"
                    FontSize="18"
                    Style="{DynamicResource MaterialDesignFilledButton}"
                    Background="{Binding IsPollingHeater, Converter={StaticResource BackgroundControlButton}}"
                    Foreground="{Binding IsPollingHeater, Converter={StaticResource ForegroundControlButton}}"
                    Content="{Binding IsPollingHeater, Converter={StaticResource ControllTextBoolConverter}, ConverterParameter='Остановить;Управлять'}"
                    Width="110" Height="35"
                    HorizontalAlignment="Center"
                    Command="{Binding SetTemperature}"
                    IsEnabled="{Binding IsWorking}"/>
        </Grid>
    </materialDesign:Card>
</UserControl>
