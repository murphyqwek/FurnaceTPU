<UserControl x:Class="FurnaceWPF.Views.Controls.TemperatureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FurnaceWPF.Views.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <materialDesign:Card Padding="14">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="Thermometer" Width="28" Height="28" />
                <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="SemiBold" Margin="8,0,0,0"/>
            </StackPanel>

            <ProgressBar Grid.Row="1" Value="{Binding Temperature}" Maximum="700" Height="10" Margin="0,0,0,6"
                         Foreground="{Binding TempBrush}" />

            <TextBlock Grid.Row="2" Text="{Binding TemperatureText}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right"/>

            <TextBox Grid.Row="3"
                     Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                     Text="{Binding Temperature, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}"
                     materialDesign:HintAssist.Hint="Задать температуру"
                     FontSize="16"
                     Margin="0,6,0,10"
                     Width="140"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     />

            <Button Grid.Row="4" Content="Управлять"
                    Style="{DynamicResource MaterialDesignFilledButton}"
                    Width="110" Height="35" FontSize="16"
                    HorizontalAlignment="Center"
                    Command="{Binding remoteCommand}"/>
        </Grid>
    </materialDesign:Card>
</UserControl>
