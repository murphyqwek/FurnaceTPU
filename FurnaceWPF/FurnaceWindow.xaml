<Window x:Class="FurnaceWPF.FurnaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FurnaceWPF.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:FurnaceWPF.Views.Controls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Focusable="True"
        Title="Печка" Height="500" Width="1300">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resourses/Dictionaries/Animation.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas Width="2600" Height="1000">

                <!--#region Furnace Images-->
                <Image Source="/Resourses/Images/Tank_Up.PNG" Height="217" Width="208" Canvas.Left="245" Canvas.Top="45"/>
                <Image Height="75" Canvas.Left="319" Source="/Resourses/Images/Tube_V.PNG" Stretch="Fill" Canvas.Top="262" Width="60" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Image Height="98" Canvas.Left="301" Source="/Resourses/Images/Rotor.PNG" Stretch="Fill" Canvas.Top="337" Width="96" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Image Height="75" Canvas.Left="319" Source="/Resourses/Images/Tube_V.PNG" Stretch="Fill" Canvas.Top="435" Width="60" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Image Height="79" Canvas.Left="299" Source="/Resourses/Images/Screw_Tube_L.PNG" Stretch="Fill" Canvas.Top="510" Width="286" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Image Height="237" Canvas.Left="585" Source="/Resourses/Images/pechka.PNG" Stretch="Fill" Canvas.Top="431" Width="1145"/>
                <Image Height="170" Canvas.Left="627" Source="/Resourses/Images/Drive.PNG" Stretch="Fill" Canvas.Top="758" Width="23" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <!--#endregion-->

                <!--#region Temperature controlls -->
                <controls:TemperatureControl DataContext="{Binding Zone1}" Canvas.Left="717" Canvas.Top="118" Height="230" Width="230" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <controls:TemperatureControl DataContext="{Binding Zone2}" Canvas.Left="1042" Canvas.Top="118" Height="230" Width="230" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <controls:TemperatureControl DataContext="{Binding Zone3}"  Canvas.Left="1378" Canvas.Top="118" Height="230" Width="230" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <!--#endregion-->

                <!--#region Drive Controls-->
                <controls:DriverControl DataContext="{Binding DriveA}" Canvas.Top="56" Height="196" Width="252" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="3"/>
                <controls:DriverControl DataContext="{Binding DriveB}" Canvas.Top="607" Height="196" Width="252" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="38"/>
                <controls:DriverControl DataContext="{Binding DriveC}" Canvas.Top="738" Height="196" Width="252" Canvas.Left="788" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <!--#endregion-->

                <!--#region DriveA animation-->
                <Path
                        x:Name="DriveARotor"
                        Fill="Gray"
                        Stroke="DimGray"
                        StrokeThickness="1"
                        RenderTransformOrigin="0.5,0.5" Canvas.Left="156" Canvas.Top="346.5" Height="79" Stretch="Fill" Width="79">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="25,0">
                                <LineSegment Point="30,20"/>
                                <LineSegment Point="50,25"/>
                                <LineSegment Point="30,30"/>
                                <LineSegment Point="25,50"/>
                                <LineSegment Point="20,30"/>
                                <LineSegment Point="0,25"/>
                                <LineSegment Point="20,20"/>
                                <LineSegment Point="25,0"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                    <Path.RenderTransform>
                        <RotateTransform x:Name="DriveARotorRotate" CenterX="0" CenterY="0" Angle="0"/>
                    </Path.RenderTransform>
                </Path>
                <!--#endregion-->

                <!--#region DriverB arrows-->
                <materialDesign:PackIcon x:Name="ArrowBAnim1"
Kind="{Binding DriveB.ArrowKind}" Width="16" Height="26" Canvas.Left="363" Canvas.Top="594">
                    <materialDesign:PackIcon.RenderTransform>
                        <TranslateTransform x:Name="ArrowBTrans1" Y="0"/>
                    </materialDesign:PackIcon.RenderTransform>
                </materialDesign:PackIcon>
                <materialDesign:PackIcon x:Name="ArrowBAnim2"
Kind="{Binding DriveB.ArrowKind}" Width="16" Height="26" Canvas.Left="394" Canvas.Top="594">
                    <materialDesign:PackIcon.RenderTransform>
                        <TranslateTransform x:Name="ArrowBTrans2" Y="0"/>
                    </materialDesign:PackIcon.RenderTransform>
                </materialDesign:PackIcon>
                <materialDesign:PackIcon x:Name="ArrowBAnim3"
Kind="{Binding DriveB.ArrowKind}" Width="16" Height="26" Canvas.Left="425" Canvas.Top="594">
                    <materialDesign:PackIcon.RenderTransform>
                        <TranslateTransform x:Name="ArrowBTrans3" Y="0"/>
                    </materialDesign:PackIcon.RenderTransform>
                </materialDesign:PackIcon>
                <materialDesign:PackIcon x:Name="ArrowBAnim4"
Kind="{Binding DriveB.ArrowKind}" Width="16" Height="26" Canvas.Left="456" Canvas.Top="594">
                    <materialDesign:PackIcon.RenderTransform>
                        <TranslateTransform x:Name="ArrowBTrans4" Y="0"/>
                    </materialDesign:PackIcon.RenderTransform>
                </materialDesign:PackIcon>
                <materialDesign:PackIcon x:Name="ArrowBAnim5"
Kind="{Binding DriveB.ArrowKind}" Width="16" Height="26" Canvas.Left="486" Canvas.Top="594">
                    <materialDesign:PackIcon.RenderTransform>
                        <TranslateTransform x:Name="ArrowBTrans5" Y="0"/>
                    </materialDesign:PackIcon.RenderTransform>
                </materialDesign:PackIcon>
                <!--#endregion-->

                <!--#region DriveC arrows-->
                <materialDesign:PackIcon x:Name="ArrowAnim1" Width="16" Height="26" Kind="{Binding DriveC.ArrowKind}"
                                           Canvas.Left="630" Canvas.Top="474" HorizontalAlignment="Center">
                    <materialDesign:PackIcon.RenderTransform>
                        <TranslateTransform x:Name="ArrowTrans1" Y="0"/>
                    </materialDesign:PackIcon.RenderTransform>
                </materialDesign:PackIcon>
                <materialDesign:PackIcon x:Name="ArrowAnim2" Width="16" Height="26" Kind="{Binding DriveC.ArrowKind}"
                                        Canvas.Left="630" Canvas.Top="536" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <materialDesign:PackIcon.RenderTransform>
                        <TranslateTransform x:Name="ArrowTrans2" Y="0"/>
                    </materialDesign:PackIcon.RenderTransform>
                </materialDesign:PackIcon>
                <materialDesign:PackIcon x:Name="ArrowAnim3" Width="16" Height="26" Kind="{Binding DriveC.ArrowKind}"
    Canvas.Left="630" Canvas.Top="607" VerticalAlignment="Center">
                    <materialDesign:PackIcon.RenderTransform>
                        <TranslateTransform x:Name="ArrowTrans3" Y="0"/>
                    </materialDesign:PackIcon.RenderTransform>
                </materialDesign:PackIcon>
                <materialDesign:PackIcon x:Name="ArrowAnim4" Width="16" Height="26" Kind="{Binding DriveC.ArrowKind}"
    Canvas.Left="630" Canvas.Top="668" VerticalAlignment="Center">
                    <materialDesign:PackIcon.RenderTransform>
                        <TranslateTransform x:Name="ArrowTrans4" Y="0"/>
                    </materialDesign:PackIcon.RenderTransform>
                </materialDesign:PackIcon>
                <materialDesign:PackIcon x:Name="ArrowAnim5" Width="16" Height="26" Kind="{Binding DriveC.ArrowKind}"
    Canvas.Left="630" Canvas.Top="720" VerticalAlignment="Center">
                    <materialDesign:PackIcon.RenderTransform>
                        <TranslateTransform x:Name="ArrowTrans5" Y="0"/>
                    </materialDesign:PackIcon.RenderTransform>
                </materialDesign:PackIcon>
                <!--#endregion-->

                <!--#region Furnace Temperature zones-->
                <!-- Зона 1-->
                <Border CornerRadius="15"
                    Background="{Binding Zone1.TempBrush}" Height="92" Width="230" Opacity="0.60" Canvas.Left="717" Canvas.Top="505"/>

                <!-- Зона 2 -->
                <Border CornerRadius="15"
                    Background="{Binding Zone2.TempBrush}" Opacity="0.60" Height="92" Width="230" Canvas.Left="1042" Canvas.Top="505" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Зона 3 -->
                <Border CornerRadius="15"
                    Background="{Binding Zone3.TempBrush}" Opacity="0.60" Height="92" Width="230" Canvas.Left="1378" Canvas.Top="505" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <!--#endregion-->


                <!--#region Settings button-->
                <Button Canvas.Left="1979" Canvas.Top="20" 
                        Height="61" Width="79" 
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        IsEnabled="{Binding IsSettingsAvalable}"
                        Command="{Binding SettingsCommand}">
                    <materialDesign:PackIcon Kind="Settings" Height="59" Width="49"/>
                </Button>
                <!--#endregion-->
                <!--#region COM Port menu-->
                <controls:PortControl HorizontalAlignment="Left" Canvas.Left="2189" VerticalAlignment="Top" Width="363" Canvas.Top="32" />
                <!--#endregion-->

                <!--#region cooling area-->
                <controls:CoolingControl DataContext="{Binding CoolingSystem}" Canvas.Left="2268" Canvas.Top="324" HorizontalAlignment="Left" VerticalAlignment="Center" Width="289"/>
                <Image Height="284" Canvas.Left="2274" Source="/Resourses/Images/Tube_V.PNG" Stretch="Fill" Canvas.Top="594" Width="278" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Image Height="190" Canvas.Left="1777" Source="/Resourses/Images/Tube_V.PNG" Stretch="Fill" Canvas.Top="455" Width="96" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-90"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image Height="568" Canvas.Left="1918" Source="/Resourses/Images/Tube_V.PNG" Stretch="Fill" Canvas.Top="396" Width="92" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Image Height="376" Canvas.Left="2172" Source="/Resourses/Images/Tube_V.PNG" Stretch="Fill" Canvas.Top="359" Width="52" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-90"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image Height="372" Canvas.Left="2169" Source="/Resourses/Images/Tube_V.PNG" Stretch="Fill" Canvas.Top="728" Width="52" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-90"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image Height="95" Canvas.Left="2382" Source="/Resourses/Images/Tube_V.PNG" Stretch="Fill" Canvas.Top="500" Width="61" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Image Height="95" Canvas.Left="2382" Source="/Resourses/Images/Tube_V.PNG" Stretch="Fill" Canvas.Top="878" Width="61" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <!--#endregion-->
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
